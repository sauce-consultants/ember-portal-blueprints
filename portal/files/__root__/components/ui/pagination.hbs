{{!-- Mobile Version --}}

<div class="flex sm:hidden flex-col items-center text-xs font-light leading-6 {{if @loading "text-transparent" "text-black dark:text-white"}}"
  data-test-mobile-pagination={{@name}}
  ...attributes
>

  <div class="flex flex-row w-full justify-center relative mb-2">

    <div class="mr-2">
      <Ui::Text
        @loading={{@loading}} 
        data-test-pagination-label={{@name}}
      >
        {{t "pagination.label"}}
      </Ui::Text>
    </div>

    {{#if @loading}}
      <div class="
        bg-gray-200 dark:bg-gray-800 
        border border-gray-200 dark:border-gray-800
        rounded-md text-transparent h-6 text-sm leading-5 pl-3 pr-6">420</div>
    {{else}}
    <select data-test-pagination-size={{@name}}
        class="
        border
        border-gray-500
        rounded
        text-sm
        leading-5
        py-0
        pr-6
        focus:border-primary-400 dark:focus:border-primary-600
        focus:outline-none
        focus:ring
        focus:ring-primary-300 dark:focus:ring-primary-700"
        {{on "change" this.changeSize}}>
        <option value="10"
          selected={{eq @size 10}}>10</option>
        <option value="20"
          selected={{eq @size 20}}>20</option>
        <option value="50"
          selected={{eq @size 50}}>50</option>
        <option value="100"
          selected={{eq @size 100}}>100</option>
      </select>
    {{/if}}
  </div>

  <div class="flex flex-row w-full justify-between items-center relative">

    <Ui::IconButton 
      @icon="chevron-left"
      @color="gray"
      @size="md"
      @style="empty"
      @loading={{@loading}}
      @disabled={{this.isPreviousButtonDisabled}}
      @title="Load previous page"
      {{on "click" (fn this.changePage (dec @page))}}
      data-test-pagination-prev
    />

    <div class="flex-1 text-center">
      <Ui::Text 
        @loading={{@loading}}
        data-test-pagination-result-limit={{@name}}
      >
        {{this.resultsText}}
      </Ui::Text>
    </div>

    <Ui::IconButton 
      @icon="chevron-right"
      @color="gray"
      @size="md"
      @style="empty"
      @loading={{@loading}}
      @disabled={{this.isNextButtonDisabled}}
      @title="Load next page"
      {{on "click" (fn this.changePage (inc @page))}}
      data-test-pagination-next
    />

  </div>

</div>

