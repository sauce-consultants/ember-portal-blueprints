<<%= classSingular %>::Crumbs @title={{t "<%= dasherizedSingular %>.new.crumb"}} />

<Ui::Header as
  |header|>
  <header.Title @text={{t "<%= dasherizedSingular %>.new.title"}} />
  <header.Actions as
    |actions|>
  </header.Actions>
</Ui::Header>

<Layout::Full as |layout|>
  <layout.Main>

    {{#with (changeset this.<%= camelSingular %> this.<%= classSingular %>Validations) as |changeset|}}

      <Ui::Form class="space-y-4"
        @onSubmit={{perform this.save changeset}}
        @afterSubmit={{perform this.afterSave changeset}}
        @changeset={{changeset}}
        as
        |form|>

        <section class="flex flex-col space-y-4 mb-4 flex-1">

          <Ui::Card class="flex-auto">

            <%= formComponent %>

          </Ui::Card>

          <Ui::Card>

            <Ui::Form::Footer class="p-6"
              @form={{form}}
              @changeset={{changeset}}
              @translationPath={{"<%= dasherizedSingular %>.form"}}
              @onCancel={{fn this.cancel changeset}}
              @serverErrors={{this.serverErrors}} />

          </Ui::Card>

        </section>

      </Ui::Form>

    {{/with}}

  </layout.Main>
</Layout::Full>