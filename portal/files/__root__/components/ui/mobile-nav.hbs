<div class="md:hidden {{if this.isShowingNav "pointer-events-auto" "pointer-events-none"}}"
  data-test-sidebar="mobile">
  <div class="fixed inset-0 flex z-40">
    {{!--
    Off-canvas menu overlay, show/hide based on off-canvas menu state.

    Entering: "transition-opacity ease-linear duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "transition-opacity ease-linear duration-300"
      From: "opacity-100"
      To: "opacity-0"
  --}}
    <div class="fixed inset-0"
      role="button"
      {{on "click" this.close}}>
      <div class="absolute inset-0 bg-gray-200 transition-opacity ease-linear duration-300 {{if this.isShowingNav "opacity-75" "opacity-0"}}"></div>
    </div>
    {{!--
    Off-canvas menu, show/hide based on off-canvas menu state.

    Entering: "transition ease-in-out duration-300 transform"
      From: "-translate-x-full"
      To: "translate-x-0"
    Leaving: "transition ease-in-out duration-300 transform"
      From: "translate-x-0"
      To: "-translate-x-full"
  --}}
    <div class="relative flex-1 flex flex-col max-w-64 sm:max-w-xs w-full bg-white transition ease-in-out duration-300 transform {{if this.isShowingNav "-translate-x-0" "-translate-x-full"}}">

      <div class="absolute top-0 right-0 -mr-14 px-1 py-3 transition delay-150 ease-in-out duration-300 {{if this.isShowingNav "opacity-100" "opacity-0"}}">
        <button class="flex items-center justify-center h-12 w-12 rounded-full focus:outline-none focus:bg-gray-200"
          type="button"
          aria-label="Close sidebar"
          data-test-nav-menu="close"
          {{on "click" this.close}}>
          {{svg-jar "x" class="h-6 w-6 text-black"}}
        </button>
      </div>

      <div class="flex-1 h-0 pb-4 overflow-y-auto">
        <div class="flex-shrink-0 flex flex-col items-center p-4 bg-primary-600">
          {{svg-jar "logo" class="h-10 w-auto text-black"}}
        </div>
        <nav class="flex-1 p-4"
          data-test-nav="mobile">

          {{#each @items as |item|}}

            {{#if item.children}}

              <Ui::SideNav::Group @title={{t item.label}}
                @activeWhen={{item.activeWhen}}
                data-test-nav-item={{item.label}}
                @icon={{t item.icon}}>

                {{#each item.children as |child|}}

                  {{#if child.route}}
                    <Ui::SideNav::Item @route={{child.route}}
                      @icon={{t child.icon}}
                      @activeWhen={{child.activeWhen}}
                      data-test-nav-item={{child.label}}>
                      {{t child.label}}
                    </Ui::SideNav::Item>
                  {{else}}
                    <Ui::SideNav::Item @href={{child.href}}
                      @icon={{t child.icon}}
                      @activeWhen={{child.activeWhen}}
                      data-test-nav-item={{child.label}}>
                      {{t child.label}}
                    </Ui::SideNav::Item>
                  {{/if}}

                {{/each}}

              </Ui::SideNav::Group>

            {{else if item.route}}

              <Ui::SideNav::Item @route={{item.route}}
                @icon={{t item.icon}}
                @activeWhen={{item.activeWhen}}
                data-test-nav-item={{item.label}}>
                {{t item.label}}
              </Ui::SideNav::Item>
            {{else}}
              <Ui::SideNav::Item @href={{item.href}}
                @icon={{t item.icon}}
                @activeWhen={{item.activeWhen}}
                data-test-nav-item={{item.label}}>
                {{t item.label}}
              </Ui::SideNav::Item>
            {{/if}}

          {{/each}}

        </nav>
      </div>
      {{!-- User Menu --}}
      <Ui::SideNav::User @authUser={{this.authUser}}>
        <Ui::SideNav::Item @action={{@logoutAction}}
          @icon="nav.logout"
          class="pb-4"
          data-test-user-menu-item="logout">
          {{t 'nav.logout'}}
        </Ui::SideNav::Item>
      </Ui::SideNav::User>
    </div>

    <div class="flex-shrink-0 w-14">
      {{!-- Force sidebar to shrink to fit close icon --}}
    </div>
  </div>
</div>