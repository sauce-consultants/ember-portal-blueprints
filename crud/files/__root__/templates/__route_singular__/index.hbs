<<%= classSingular %>::Crumbs @<%= camelSingular %>={{this.<%= camelSingular %>}}
  @title={{t "<%= dasherizedSingular %>.view.crumb"}} />

<Ui::Header as
  |header|>
  <header.Title @text={{concat (t "<%= dasherizedSingular %>.view.title") ": " (if this.loading "" this.<%= camelSingular %>.describe)}} />
</Ui::Header>

<Layout::Sidebar as |layout|>
  <layout.Main>

    <Ui::Card class="flex-auto">

      <%= viewComponent %>

    </Ui::Card>
  </layout.Main>

  <layout.Side>

    <Ui::Card @title="Actions"
      @name="actions"
      class="flex-1">

      <<%= classSingular %>::Actions @actions={{this.sidebarActions}}
        class="px-2 py-4" />

    </Ui::Card>
    
  </layout.Side>
</Layout::Sidebar>