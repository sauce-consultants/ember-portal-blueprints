<<%= classSingular %>::Crumbs @<%= camelSingular %>={{this.<%= camelSingular %>}}
  @title={{t "<%= dasherizedSingular %>.archive.crumb"}} />

<Ui::Header as
  |header|>
  <header.Title @text={{concat (t "<%= dasherizedSingular %>.archive.title") ": " (if this.loading "" this.<%= camelSingular %>.describe)}} />
</Ui::Header>

<Layout::Sidebar as |layout|>
  <layout.Main>
    <Ui::Form class="w-full" as |form|>

      <Ui::Card>
        <Ui::Archive class="px-4 py-5 sm:p-6"
          @form={{form}}
          @loading={{this.loading}}
          @onDelete={{perform this.archive this.<%= camelSingular %>}}
          @button={{t "<%= dasherizedSingular %>.archive.button"}}>
          {{t "<%= dasherizedSingular %>.archive.body" htmlSafe=true name=this.<%= camelSingular %>.describe}}
        </Ui::Archive>
      </Ui::Card>
    </Ui::Form>
  </layout.Main>

  <layout.Side>

    <Ui::Card @title="Actions"
      @name="actions"
      class="flex-1">

      <<%= classSingular %>::Actions @actions={{this.sidebarActions}}
        class="px-2 py-4" />

    </Ui::Card>
    
  </layout.Side>
</Layout::Sidebar>