<div class="relative cursor-pointer
  flex items-center
  text-sm leading-6
  rounded-full
  ml-2"
  {{on "click" this.activate}}
  role="button"
  data-test-action={{if @name @name true}}
  ...attributes>

  <Input class="
    py-1
    pr-8
    text-right
    text-sm
    placeholder-black
    block
    rounded-full
    bg-transparent
    border-none
    outline-none
    focus:border-primary-400
    focus:outline-none
    focus:ring
    focus:ring-primary-300
    min-w-0 w-22
    focus:w-auto focus:max-w-64 focus:bg-white
    {{if @value "w-auto max-w-64 bg-white" ""}}
    transition duration-500 ease-in-out"
    placeholder={{t "search.placeholder"}}
    id={{this.searchInputId}}
    @value={{@value}}
    data-test-action-input={{if @name @name true}} />

  <div class="h-8 w-8 flex justify-center items-center  absolute right-0 top-0">
    {{svg-jar "search" class="w-5 h-5 bg-white rounded-full" data-test-action-icon="search"}}
  </div>
</div>