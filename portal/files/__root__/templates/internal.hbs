<div class="h-screen flex overflow-hidden bg-gray-50">

  {{!-- Off-canvas menu for mobile --}}
  <Ui::MobileNav @items={{this.options}}
    @statementsEnabled={{this.statementsEnabled}}
    @isShowingNav={{this.isShowingNav}}
    @onClose={{this.toggleNav}}
    @logoutAction={{this.logout}} />

  {{!-- Wormhole for slideover modal --}}
  <div id="slideover-wormhole">
  </div>

  {{!-- Static sidebar for desktop --}}
  <Ui::SideNav @items={{this.options}}
    @statementsEnabled={{this.statementsEnabled}}
    @logoutAction={{this.logout}} />

  <div class="flex flex-col w-0 flex-1 overflow-hidden">

    <div class="relative lg:hidden p-4 bg-primary-500 flex-shrink-0 flex items-center justify-center">

      <button class="absolute inset-y-0 left-0 mx-2 my-3 h-12 w-12 inline-flex items-center justify-center rounded-md text-gray-100 hover:text-gray-600 focus:outline-none focus:bg-gray-100 transition ease-in-out duration-150"
        {{on "click" this.toggleNav}}
        aria-label="Open sidebar"
        data-test-nav-menu="open"
        type="button">
        {{svg-jar "menu" class="h-6 w-6 text-black"}}
      </button>

      {{svg-jar "logo" class="h-10 w-auto text-black"}}

    </div>

    {{!-- min-h-screen flex-1 flex flex-col relative z-0 overflow-y-auto focus:outline-none --}}
    <main class="flex-1 relative z-0 overflow-y-auto focus:outline-none"
      tabindex="0">
      <div class="min-h-screen flex flex-col flex-1">
        {{outlet}}

        <Ui::Footer />

      </div>
    </main>

  </div>

</div>