{{#if (and @changeset.isInvalid @form.didSubmit)}}
  <div class="rounded-md bg-red-50 p-4"
    ...attributes>
    <div class="flex">
      <div class="flex-shrink-0">
        {{svg-jar "exclamation" class="h-5 w-5 text-red-400"}}
      </div>
      <div class="ml-3">
        <h3 class="text-sm leading-5 font-medium text-red-800"
          data-test-validation-errors-title>
          {{@title}}
        </h3>
        <div class="mt-2 text-sm leading-5 text-red-700">
          <ul class="space-y-2"
            data-test-validation-errors-body>
            {{#each @changeset.errors as |error|}}
              <li>
                <strong class="font-bold">{{titleize error.key}}</strong>:
                {{#each error.validation as |v|}}
                  <br />{{v}}
                {{/each}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
{{/if}}