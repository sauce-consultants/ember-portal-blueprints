
{{!-- For Larger screens we'll show a text button with a trailing icon --}}
<Ui::Button 
  class="hidden sm:flex" 
  @trailingIcon={{@icon}} 
  @size={{@size}} 
  @color={{@color}} 
  @style={{@style}}
  @title={{@title}}
  @loading={{@loading}}
  data-test-action={{@name}}
  ...attributes
>{{yield}}</Ui::Button>
{{!-- For Mobile screens we'll just show the icon --}}
<Ui::IconButton 
  class="sm:hidden" 
  @icon={{@icon}} 
  @size={{@size}} 
  @color={{@color}} 
  @style={{@iconStyle}}
  @title={{@title}} 
  @loading={{@loading}}
  data-test-action={{@name}}
  ...attributes
/>