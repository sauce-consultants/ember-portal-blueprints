{{#with (changeset @authUser this.ResetPasswordValidations) as |changeset|}}

  <Ui::Form class="space-y-6 max-w-sm flex flex-col items-center"
    @onSubmit={{perform @onReset changeset}}
    @afterSubmit={{perform @afterReset changeset}}
    @changeset={{changeset}}
    as
    |form|>

    <form.Control class="w-full"
      @name="password"
      as
      |control|>
      <control.Label @text={{t "external.reset.form.password.label"}} />
      <control.Input @value={{changeset.password}}
        @type="password"
        placeholder={{t "external.reset.form.password.placeholder"}}
        autocomplete="off" />
      <control.Helper @tip={{t "external.reset.form.password.tip"}} />
    </form.Control>

    <form.Control class="w-full"
      @name="passwordConfirmation"
      as
      |control|>
      <control.Label @text={{t "external.reset.form.passwordConfirmation.label"}} />
      <control.Input @value={{changeset.passwordConfirmation}}
        @type="password"
        placeholder={{t "external.reset.form.passwordConfirmation.placeholder"}}
        autocomplete="off" />
      <control.Helper @tip={{t "external.reset.form.passwordConfirmation.tip"}} />
    </form.Control>

    <form.Submit @size="lg"
      class="w-full">{{t "external.reset.form.submit"}}</form.Submit>

    <Ui::Form::ServerErrors @title={{t "form.footer.serverErrors"}}
      @errors={{@serverErrors}}
      class="w-full" />

    <Ui::Form::ValidationErrors @title={{t "form.footer.validationErrors"}}
      @changeset={{changeset}}
      @translationPath={{"external.reset.form"}}
      @form={{form}}
      class="w-full" />

    <LinkTo @route="external.login"
      class="w-full">
      <form.Button @size="lg"
        @style="text"
        @color="gray"
        class="w-full">{{t "external.reset.form.back"}}</form.Button>
    </LinkTo>

  </Ui::Form>

{{/with}}