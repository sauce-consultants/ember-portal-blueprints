{{#if @errors}}
  <div class="rounded-md bg-danger-50 p-4"
    ...attributes>
    <div class="flex">
      <div class="flex-shrink-0">
        {{svg-jar "exclamation" class="h-5 w-5 text-danger-400"}}
      </div>
      <div class="ml-3">
        <h3 class="text-sm leading-5 font-medium text-danger-800"
          data-test-server-errors-title>
          {{@title}}
        </h3>
        <div class="mt-2 text-sm leading-5 text-danger-700"
          data-test-server-errors-body>
          <ul>
            {{#each @errors as |error|}}
              <li>{{error}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
{{/if}}