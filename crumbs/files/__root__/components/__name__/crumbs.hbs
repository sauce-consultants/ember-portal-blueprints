<Ui::Breadcrumbs as
  |crumb|>

  <crumb.Item @isLast={{not (or @<%= camelSingular %> @title)}}>
    <LinkTo @route="<%= routeNamePlural %>.index">
      {{t "<%= dasherizedSingular %>.list.crumb"}}
    </LinkTo>
  </crumb.Item>

  {{#if @<%= camelSingular %>}}

    <crumb.Item @isLast={{not @title}}>
      <LinkTo @route="<%= routeNameSingular %>.index"
        @model={{@<%= camelSingular %>.id}}>
        {{@<%= camelSingular %>.describe}}
      </LinkTo>
    </crumb.Item>

  {{/if}}

  {{#if @title}}

    <crumb.Item @isLast={{true}}>
      {{@title}}
    </crumb.Item>

  {{/if}}

</Ui::Breadcrumbs>