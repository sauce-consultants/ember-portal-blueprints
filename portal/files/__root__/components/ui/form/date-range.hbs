<div class="relative rounded-md shadow-sm">
  {{#if @leadingIcon}}
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      {{svg-jar @leadingIcon class=(concat "h-5 w-5 text-" this.iconColor "-400")}}
    </div>
  {{/if}}
  <DateRangePicker id={{this.dateInputId}}
    data-test-input={{@name}}
    @inputClasses="
      daterangepicker-input 
      form-input block w-full
      bg-white
      disabled:bg-gray-200
      rounded-md shadow-sm 
      transition duration-150 ease-in-out 
      sm:text-sm sm:leading-5 
      {{this.focusClasses}}
      {{this.borderClasses}}
      {{this.textClasses}}
      {{this.iconPadding}}"
    @start={{this.start}}
    @end={{this.end}}
    @serverFormat={{this.format}}
    @applyAction={{this.setDateRange}}
    @hideAction={{this.hideDatePicker}}
    @cancelAction={{this.cancelDatePicker}}
    @showCustomRangeLabel={{this.showCustomRangeLabel}}
    @autoUpdateInput={{false}}
    @showDropdowns={{true}} />
  {{#if this.trailingIcon}}
    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
      {{svg-jar this.trailingIcon class=(concat "h-5 w-5 text-" this.iconColor "-400")}}
    </div>
  {{/if}}

</div>