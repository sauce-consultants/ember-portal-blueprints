{{!-- Mobile Version --}}

<div class="flex sm:hidden flex-col items-center text-xs font-light leading-6 p-4"
  data-test-mobile-pagination={{@name}}>

  <div class="flex flex-row w-full justify-center relative mb-2">

    <div data-test-pagination-label={{@name}}
      class="mr-2">
      {{t "pagination.label"}}
    </div>
    <select data-test-pagination-size={{@name}}
      class="
      border
      border-gray-400
      rounded
      text-sm
      leading-5
      py-0
      pr-6
      focus:border-primary-400
      focus:outline-none
      focus:ring
      focus:ring-primary-300"
      {{on "change" this.changeSize}}>
      <option value="10"
        selected={{eq @size 10}}>10</option>
      <option value="20"
        selected={{eq @size 20}}>20</option>
      <option value="50"
        selected={{eq @size 50}}>50</option>
      <option value="100"
        selected={{eq @size 100}}>100</option>
    </select>
  </div>

  <div class="flex flex-row w-full justify-between w-full relative">

    {{#if this.isPreviousButtonDisabled}}
      <div data-test-pagination-prev={{@name}}
        role="button"
        class="text-gray-100"
        disabled>
        {{svg-jar "chevron-left" class="w-6 h-6"}}
      </div>
    {{else}}
      <div data-test-pagination-prev={{@name}}
        role="button"
        class="text-gray-400 hover:text-gray-500 cursor-pointer"
        {{on "click" (fn this.changePage (dec @page))}}>
        {{svg-jar "chevron-left" class="w-6 h-6"}}
      </div>
    {{/if}}

    <div class="flex-1 text-center"
      data-test-pagination-result-limit={{@name}}>{{this.resultsText}}</div>

    {{#if this.isNextButtonDisabled}}
      <div data-test-pagination-next={{@name}}
        role="button"
        class="text-gray-100"
        disabled>
        {{svg-jar "chevron-right" class="w-6 h-6"}}
      </div>
    {{else}}
      <div data-test-pagination-next={{@name}}
        role="button"
        class="text-gray-400 hover:text-gray-500 cursor-pointer"
        {{on "click" (fn this.changePage (inc @page))}}>
        {{svg-jar "chevron-right" class="w-6 h-6"}}
      </div>
    {{/if}}
  </div>

</div>

